<form autocomplete="off">
    <p class="notes">{{localize "MKA.MovementConfigHint"}}</p>
    <div class="form-group">
        <label>{{localize "MKA.MovementWalk"}}</label>
        <input name="system.attributes.movement.walk" type="number" step="0.1" value="{{movement.walk}}"/>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementBurrow"}}</label>
        <input name="system.attributes.movement.burrow" type="number" step="0.1" value="{{movement.burrow}}"/>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementClimb"}}</label>
        <input name="system.attributes.movement.climb" type="number" step="0.1" value="{{movement.climb}}"/>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementFly"}}</label>
        <input name="system.attributes.movement.fly" type="number" step="0.1" value="{{movement.fly}}"/>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementSwim"}}</label>
        <input name="system.attributes.movement.swim" type="number" step="0.1" value="{{movement.swim}}"/>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementUnits"}}</label>
        <select name="system.attributes.movement.units">
            {{selectOptions units selected=movement.units}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "MKA.MovementHover"}}</label>
        <input name="system.attributes.movement.hover" type="checkbox" {{checked movement.hover}}/>
    </div>
    <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
